/* https://github.com/middleman/middleman-syntax */
<%= Rouge::Themes::Github.render(:scope => '.highlight') %>

/* highlight fixes */
.highlight {
  background-color: #fff;
}

.gist-file .file-data {
  background-color: #fff;
}

div.gist-file {
  border-radius: $border-radius-base !important;
}

div.gist-file, pre.highlight {
  font-size: 0.9em;
}

pre {
  padding: 0.5em; // unification of gist and rouge kramdown formatter
}

pre.highlight {
  border: solid 1px #ddd;
  background: #fff;
  padding: 0;
/*   line-height: 23px; */
  margin-bottom: 30px;
  white-space: pre;
  overflow-x: auto;
  word-break: inherit;
  word-wrap: inherit;
}

.highlight td {
    padding: 0.5em;
    &.gutter {
      text-align: right;
      background-color: #ECECEC;
    }
    &.code {
    }
}

.gl, .line-numbers { 
  background: #fafafa;
  border-right: 1px solid #ddd;
  color: #999;
  
  /* Stop line numbers being visually selected */
  -webkit-touch-callout: none;
  -webkit-user-select: none;
  -khtml-user-select: none;
  -moz-user-select: none;
  -ms-user-select: none;
  user-select: none;
}

.code-meta {
  position: relative;
  top: -31px;
  background-color: #E8E8E8;
  background-image: linear-gradient(#FAFAFA, #E8E8E8);
  background-repeat: repeat-x;
  color: #999999;
  overflow: hidden;
  padding: 10px;
  text-shadow: 1px 1px rgba(255, 255, 255, 0.8);
  border-color: #DDDDDD #DDDDDD #CCCCCC;
  border-image: none;
  border-radius: 0 0 $border-radius-base $border-radius-base;
  border-style: solid;
  border-width: 1px;
  font-family: $font-github;
  font-size: 12px;
  a, em {
    font-style: normal;
    color: #666666;
    font-weight: bold;
    text-decoration: none;
  }
}

